	"version": "0.0.0",
	"type": "module",
	"scripts": {
		"dev": "vite",
		"build": "tsc -b && vite build",
		"lint": "eslint .",
		"lint:fix": "npm run lint -- --fix",
		"prettier": "prettier . --write",
		"preview": "vite preview",
		"stylelint": "npx stylelint **/*.{css,scss} --fix"
